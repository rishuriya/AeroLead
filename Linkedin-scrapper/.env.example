# LinkedIn Credentials (for session-based authentication)
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_password

# Bright Data API Token (RECOMMENDED for automation)
# Get your token from: https://brightdata.com
# Best for: Production automation, batch scraping
BRIGHTDATA_API_TOKEN=

# Proxycurl API Key (alternative for public profiles)
# Get your key from: https://nubela.co/proxycurl/
# Free tier: 10 credits/month, Paid: $99+/month
PROXYCURL_API_KEY=

# Proxy Configuration (optional, recommended for avoiding bot detection)
# Format: http://user:pass@host:port,http://user:pass@host2:port
# Recommended providers: BrightData, Smartproxy, Oxylabs
USE_PROXIES=false
PROXY_LIST=

# NEW Scraper Settings (httpx-based)
MAX_WORKERS=3
RATE_LIMIT_MIN=2
RATE_LIMIT_MAX=5
MAX_RETRIES=3
OUTPUT_DIR=output
USE_PROXYCURL=false
FALLBACK_ENABLED=true

# OLD Scraper Settings (Selenium-based - deprecated)
PROFILE_COUNT=20
REQUEST_DELAY_MIN=3
REQUEST_DELAY_MAX=6
PAGE_LOAD_TIMEOUT=20
HEADLESS_MODE=true
WINDOW_SIZE=1920,1080

# Output Settings
OUTPUT_FILE=linkedin_profiles.csv

# Logging
LOG_LEVEL=INFO
