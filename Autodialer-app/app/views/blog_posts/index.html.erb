<div class="container-fluid">
  <!-- Page Header -->
  <div class="row mb-5">
    <div class="col-md-8">
      <h1 class="page-title">Blog Posts</h1>
      <p class="page-subtitle">AI-generated blog articles and content</p>
    </div>
    <div class="col-md-4 text-end">
      <div class="header-actions">
        <%= link_to generate_new_blog_posts_path, class: "btn btn-primary" do %>
          Generate with AI
        <% end %>
        <%= link_to new_blog_post_path, class: "btn btn-outline" do %>
          New Post
        <% end %>
      </div>
    </div>
  </div>

  <!-- Statistics -->
  <div class="row g-3 mb-5">
    <div class="col-md-3">
      <div class="stat-card">
        <div class="stat-value"><%= @statistics[:total] %></div>
        <div class="stat-label">Total Articles</div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <div class="stat-value" style="color: #3b82f6;"><%= @statistics[:published] %></div>
        <div class="stat-label">Published</div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <div class="stat-value" style="color: #9ca3af;"><%= @statistics[:draft] %></div>
        <div class="stat-label">Drafts</div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <div class="stat-value" style="color: #6b7280;"><%= @statistics[:archived] %></div>
        <div class="stat-label">Archived</div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <%= form_with url: blog_posts_path, method: :get, local: true, class: "filter-form" do |f| %>
            <div class="row g-3">
              <div class="col-md-3">
                <%= text_field_tag :search, params[:search],
                    class: "form-control",
                    placeholder: "Search posts..." %>
              </div>
              <div class="col-md-3">
                <%= select_tag :status, options_for_select([
                    ['All Status', ''],
                    ['Published', 'published'],
                    ['Draft', 'draft'],
                    ['Archived', 'archived']
                  ], params[:status]),
                  class: "form-control" %>
              </div>
              <div class="col-md-3">
                <%= select_tag :ai_model, options_for_select([
                    ['All AI Models', ''],
                    ['Gemini', 'gemini'],
                    ['OpenAI', 'openai'],
                    ['Anthropic', 'anthropic']
                  ], params[:ai_model]),
                  class: "form-control" %>
              </div>
              <div class="col-md-3">
                <%= submit_tag "Filter", class: "btn btn-primary w-100" %>
                <%= link_to "Reset", blog_posts_path, class: "btn btn-outline w-100 mt-2" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Blog Posts Grid -->
  <div class="row">
    <% if @blog_posts.any? %>
      <% @blog_posts.each do |blog_post| %>
        <div class="col-lg-6 mb-4">
          <div class="blog-card">
            <div class="blog-card-body">
              <div class="blog-header">
                <h3 class="blog-title">
                  <%= link_to blog_post.title, blog_post_path(blog_post.slug), class: "blog-title-link" %>
                </h3>
                <% if blog_post.ai_model.present? %>
                  <span class="blog-badge"><%= blog_post.ai_model.upcase %></span>
                <% end %>
              </div>

              <div class="blog-status mb-3">
                <% if blog_post.published? %>
                  <span class="badge badge-success">Published</span>
                <% elsif blog_post.draft? %>
                  <span class="badge badge-warning">Draft</span>
                <% else %>
                  <span class="badge badge-secondary">Archived</span>
                <% end %>
              </div>

              <p class="blog-excerpt"><%= blog_post.excerpt || blog_post.content.truncate(150) %></p>

              <div class="blog-meta">
                <span class="text-muted">
                  <%= blog_post.reading_time %> min read ‚Ä¢ <%= blog_post.word_count %> words
                </span>
                <span class="text-muted">
                  <%= time_ago_in_words(blog_post.created_at) %> ago
                </span>
              </div>
            </div>

            <div class="blog-card-footer">
              <%= link_to blog_post_path(blog_post.slug), class: "btn-link" do %>
                View
              <% end %>
              <%= link_to edit_blog_post_path(blog_post.slug), class: "btn-link" do %>
                Edit
              <% end %>
              <% if blog_post.draft? %>
                <%= button_to publish_blog_post_path(blog_post.slug), method: :post, class: "btn-link" do %>
                  Publish
                <% end %>
              <% end %>
              <%= button_to blog_post_path(blog_post.slug), method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn-link text-danger" do %>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Pagination -->
      <div class="col-12">
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @blog_posts %>
        </div>
      </div>
    <% else %>
      <div class="col-12">
        <div class="empty-state">
          <div class="empty-icon">üìù</div>
          <h4>No blog posts yet</h4>
          <p class="text-muted">Start by generating content with AI or create a new post manually</p>
          <div class="mt-4">
            <%= link_to generate_new_blog_posts_path, class: "btn btn-primary me-2" do %>
              Generate with AI
            <% end %>
            <%= link_to new_blog_post_path, class: "btn btn-outline" do %>
              Create Manually
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

